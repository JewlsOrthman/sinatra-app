<h2>Users</h2>
<ul>
<% @users.each do |user| %>
  <li>
    <a href="/users/<%= user.id %>">Hi, <%= user.salutation %>!</a>
    <form method="post" action="/users/<%= user.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete">
    </form>
  </li>
<% end %>
</ul>

<a href="/users/new">Create New User</a>